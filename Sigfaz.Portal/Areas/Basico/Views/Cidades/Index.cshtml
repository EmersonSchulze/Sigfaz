@model IEnumerable<Sigfaz.Portal.Areas.Basico.ViewModels.Cidade.CidadeIndexViewModel>

@{
    ViewBag.Title = "Cidades";
}

<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<div class="panel-heading">
    Cidades
</div>
<!-- /.panel-heading -->
<div class="panel-body">
   
<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
    </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado.Nome)
        </td>
        <td>
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.CidadeId })
        </td>
    </tr>
}   

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
               
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->

